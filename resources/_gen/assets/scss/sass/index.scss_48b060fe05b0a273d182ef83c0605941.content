*{font-family:Arial,Helvetica,sans-serif}a{text-decoration:none}body{width:100%;box-sizing:border-box;margin:0!important}h1{margin:0;padding:0}h2{margin:0;padding:0}h3{margin:0;padding:0}p,b{margin:0;padding:0}hr{margin:0;padding:0;background:#000}ul li{list-style:none}@media screen and (min-width:420px){body{margin:.5rem!important;width:initial}}.footer{background:#03001e;background:-webkit-linear-gradient(to right,#fdeff9,#ec38bc,#7303c0,#03001e);background:linear-gradient(to right,#fdeff9,#ec38bc,#7303c0,#03001e);height:9rem;width:100%}.homepage__content{margin-top:2rem;margin-left:1rem}.homepage__content p{font-size:1.2rem;line-height:1.8rem;margin-top:1rem;margin-bottom:1rem}.homepage__hero .homepage__hero__title{background:#fff;border:6px solid cyan;box-shadow:-5px 5px 0 0 red;padding:.4rem;display:inline-block;font-size:2.3rem}.homepage__hero .homepage__hero__title__secondary{background:#fff;display:inline-block;padding:1rem;border:6px solid cyan;box-shadow:-5px 5px 0 0 red;font-size:1.2rem;margin-bottom:2rem}.homepage__section{display:flex;flex-direction:column;width:100%}.homepage__section .homepage__section__title{font-size:2rem}.homepage__section .homepage__section__stack{margin-bottom:2rem}.homepage__section .homepage__section__stack h3{margin-top:1rem}.poison{margin-left:1rem;padding:.4rem;padding-left:.6rem;box-shadow:-5px 5px 0 0 cyan;border-bottom:2px solid #ff0}.project{padding:.6rem;background:#fff;border:3px solid rgba(255,46,182,.5);color:#000}@media screen and (min-width:768px){.homepage__content{margin-top:4rem;margin-left:4rem}.homepage__section{width:600px}.homepage__section .homepage__section__title{font-size:2rem}}