*{font-family:-apple-system,BlinkMacSystemFont,avenir next,avenir,helvetica neue,helvetica,ubuntu,roboto,noto,segoe ui,arial,sans-serif}a{text-decoration:none}body{width:100%;box-sizing:border-box;margin:0!important;background:#fff}h1{color:#333;margin:0;padding:0}h2{color:#333;margin:0;padding:0;font-size:1.25rem;margin-bottom:1rem}h3{color:#333;margin:0;padding:0;margin-top:1rem}p,b{color:#333;font-size:1rem;line-height:1.5;margin:0;padding:0;margin-bottom:1rem}hr{margin:0;padding:0;background:#000}ul li{list-style:none}@media screen and (min-width:420px){body{margin:.5rem!important;width:initial}}.footer{background:#03001e;background:-webkit-linear-gradient(to right,#fdeff9,#ec38bc,#7303c0,#03001e);background:linear-gradient(to right,#fdeff9,#ec38bc,#7303c0,#03001e);height:9rem;width:100%}.homepage__content{margin-top:2rem;margin-left:1rem}.homepage__hero .homepage__hero__title{border:6px solid cyan;box-shadow:-5px 5px 0 0 red;padding:.4rem;display:inline-block;font-size:2.3rem}.homepage__hero .homepage__hero__title__secondary{display:inline-block;padding:1rem;border:6px solid cyan;box-shadow:-5px 5px 0 0 red;font-size:1.2rem;margin-bottom:2rem}.homepage__section{display:flex;flex-direction:column;width:100%;max-width:34em;margin-top:6rem}@media screen and (min-width:768px){.homepage__content{margin-top:4rem;margin-left:4rem}.homepage__section{width:600px}}